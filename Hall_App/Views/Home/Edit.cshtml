@{
}


<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-black text-white p-4">
            <h3 class="mb-0">Edit Arcade Hall</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input asp-for="Id" type="hidden" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter hall name" />
                </div>

                <div class="mb-3">
                    <label asp-for="Genre" class="form-label fw-bold"></label>
                    <input asp-for="Genre" class="form-control" placeholder="Enter genre" />
                </div>

                <div class="mb-3">
                    <label asp-for="ImageURL" class="form-label fw-bold"></label>
                    <input asp-for="ImageURL" class="form-control" placeholder="Enter image URL" />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Location" class="form-label fw-bold"></label>
                    <input asp-for="Location" class="form-control" placeholder="Enter location" />
                </div>

                <div class="mb-3">
                    <label asp-for="MaxCapacity" class="form-label fw-bold"></label>
                    <input asp-for="MaxCapacity" class="form-control" type="number" placeholder="Enter max capacity" />
                </div>

                <div class="mb-3">
                    <label asp-for="HallStatus" class="form-label fw-bold"></label>
                    <select asp-for="HallStatus" class="form-select">
                        <option value="Open">Open</option>
                        <option value="Closed">Closed</option>
                        <option value="Under Maintenance">Under Maintenance</option>
                        <option value="Under Maintenance">SpecialEvent</option>
                        <option value="Under Maintenance">Reserved</option>
                        
                    </select>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark">Save Changes</button>
                    <a asp-controller="Home" asp-action="Admin" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>