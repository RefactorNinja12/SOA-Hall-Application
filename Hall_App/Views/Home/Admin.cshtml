@model List<ArcadeHall>
<div class="container mt-5">
    <h1 class="text-center mb-4 text-white">Arcade Hall Information</h1>
    <div class="table-responsive">
        <table class="table table-striped table-hover ">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Namn</th>
                    <th>Genre</th>
                    <th>Beskrivning</th>
                    <th>Avdelning</th>
                    <th>Max kapacitet</th>
                    <th>Hall status</th>
                    <th>Åtgärder</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hall in Model)
                {
                    <tr>
                        <td>@hall.Id</td>
                        <td>@hall.Name</td>
                        <td>@hall.Genre</td>
                        <td>@hall.Description</td>
                        <td>@hall.Location</td>
                        <td>@hall.MaxCapacity</td>
                        <td>@hall.HallStatus</td>
                        <td>
                            <div class="btn-group">
                                <a href="@Url.Action("Edit", "Home", new { id = hall.Id })" class="btn btn-warning btn-sm me-2">Update</a>
                                <form class="DeleteForm d-inline" asp-controller="Home" asp-action="Delete" method="post" onsubmit="return confirm('Är du säker på att du vill radera denna hall?');">
                                    <input type="hidden" name="id" value="@hall.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create-knappen under tabellen -->
    <div class="text-center mt-3">
        <a href="@Url.Action("CreateArcadeHalls", "Home")" class="btn btn-primary">Create New Arcade Hall</a>
    </div>
</div>